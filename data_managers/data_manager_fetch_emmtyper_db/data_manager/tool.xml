<tool id="emmtyper_db_fetcher" name="emmtyper_db_fetcher" version="0.1.0+galaxy0" python_template_version="3.5" profile="21.05">
    <requirements>
        <requirement type="package">python</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    python '$__tool_directory__/blast_downloader.py'
        #if $url:
    "${url}"
        #end if

        #if $output_dir:
    "${output_dir}"
        #end if
    ]]></command>
    <configfiles>
        <configfile name="dmjson"><![CDATA[
#from datetime import datetime
    {
      "data_tables":{
        "emmtyper_database":[
          {
            "value":"#echo datetime.now().strftime('%Y-%m-%d-%H%M%S')#",
            "name":"#echo datetime.now().strftime('%Y-%m-%d-%H%M%S')#",
            "version":"@TOOL_VERSION@",
            "path":"$outdir"
          }
        ]
      }
    }]]>
            </configfile>
        </configfiles>
    <inputs>
        <param argument="--url" name="url" type="text" optional="false" label="URL" help="URL of the file to download (in quotes)"/>
        <param argument="--output_dir" name="output_dir" type="text" optional="false" label="Output directory" help="Directory to store the downloaded file and BLAST database"/>
    </inputs>
    <outputs>
        <!-- Outputs will be handled by the Data Manager Framework -->
    </outputs>
    <tests>
        <test>
            <param name="url" value="https://ftp.cdc.gov/pub/infectious_diseases/biotech/emmsequ/alluntrimmed.tfa"/>
            <param name="output_dir" value="test"/>
            <output name="output_dir">
                <assert_contents>
                    <has_text text="virus"/>
                    <has_text text="5.8.0"/>
                </assert_contents>
        </test>
    </tests>
    <help><![CDATA[
    This tool downloads and sets up a BLAST database for use with emmtyper.
    
    It fetches the database from the specified URL and installs it in the specified output directory.
    ]]></help>
</tool>